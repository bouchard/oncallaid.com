<div class="edit article">

	<% if @article.persisted? %>
		<p>This article has <%= @article.submissions.pending.count %> submissions pending approval. <%= link_to('View article', slug_path(:chapter_slug => @article.chapter.slug, :slug => @article.slug), :target => '_blank') %>.</p>
	<% end %>

	<%= form_for(@article) do |f| %>
		<label for="title">Title:</label>
		<%= f.text_field :title %>

		<label for="content">Content:</label>
		<%= f.text_area :body %>

		<label for="chapter_id">Select Chapter:</label>
		<%= f.select :chapter_id, Chapter.all.collect {|p| [ p.title, p.id ] } %>

		<%= f.submit %>
	<% end %>
</div>